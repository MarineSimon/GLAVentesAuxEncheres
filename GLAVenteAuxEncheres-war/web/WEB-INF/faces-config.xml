<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.1"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">

    <navigation-rule>
        <from-view-id>/createAccount.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>welcome</from-outcome>
            <to-view-id>/welcome.xhtml</to-view-id>
            <redirect>/welcome.xhtml</redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>additionalCreateAccount</from-outcome>
            <to-view-id>/additionalCreateAccount.xhtml</to-view-id>
            <redirect>/additionalCreateAccount.xhtml</redirect>
        </navigation-case>
        <navigation-case>
            <from-action>cancel</from-action>
            <to-view-id>/login.xhtml</to-view-id>
            <redirect>/login.xhtml</redirect>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>additionalCreateAccount</from-outcome>
            <to-view-id>/additionalCreateAccount.xhtml</to-view-id>
            <redirect>/additionalCreateAccount.xhtml</redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>createAccount</from-outcome>
            <to-view-id>/createAccount.xhtml</to-view-id>
            <redirect>/createAccount.xhtml</redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>welcome</from-outcome>
            <to-view-id>/welcome.xhtml</to-view-id>
            <redirect>/welcome.xhtml</redirect>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/additionalCreateAccount.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>additionalCreateAccount</from-outcome>
            <to-view-id>/additionalCreateAccount.xhtml</to-view-id>
            <redirect>/additionalCreateAccount.xhtml</redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>createAccount</from-outcome>
            <to-view-id>/createAccount.xhtml</to-view-id>
            <redirect>/createAccount.xhtml</redirect>
        </navigation-case>
        <navigation-case>
            <from-action>cancel</from-action>
            <to-view-id>/login.xhtml</to-view-id>
            <redirect>/login.xhtml</redirect>
        </navigation-case>
    </navigation-rule>
</faces-config>
